@model CATALOGWEB.Models.ViewModels.RolVM

@{
    ViewData["Title"] = "DETALLE ROL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
             
                    @if (Model.oRol.Idr == 0)
                    {
                <div class="text-center mb-4">
                    <h1 class="display-4">CREAR ROL</h1>
                </div>
            }
                    else
                    {
                <div class="text-center mb-4">
                    <h1 class="display-4">EDITAR ROL</h1>
                </div>
            }
                <div class="card-body">
                    <form asp-action="Rol_Detalle" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="oRol.Idr" />
                        <div class="mb-3">
                            <label class="form-label" asp-for="oRol.Rol1">ROL</label>
                            <input class="form-control" asp-for="oRol.Rol1" type="text" />
                        </div>
                        <div class="d-flex justify-content-between">
                            @if (Model.oRol.Idr == 0)
                            {
                            <button class="btn btn-success btn-sm" type="submit" style="background-color: #069f4b; border-color: #069f4b; color: black;">CREAR</button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-sm" type="submit">ACTUALIZAR</button>
                            }
                            <a class="btn btn-dark btn-sm" asp-action="Roles" asp-controller="Home">VOLVER</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
