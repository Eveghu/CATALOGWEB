@model CATALOGWEB.Models.Rol

@{
    ViewData["Title"] = "ELIMINAR ROL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="text-center mb-4">
            <h1 class="display-4">ELIMINAR ROL</h1>
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <form asp-action="Eliminarol" asp-controller="Home" method="post">
                    <input type="hidden" asp-for="Idr" />
                    <div class="mb-3">
                        <label class="form-label" asp-for="Rol1">ROL</label>
                        <input class="form-control form-control-sm" asp-for="Rol1" type="text" disabled />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-danger btn-sm" type="submit">ELIMINAR</button>
                        <a class="btn btn-dark btn-sm" asp-action="Roles" asp-controller="Home">VOLVER</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
